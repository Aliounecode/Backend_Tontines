# ============================================
# CONFIGURATION DE LA BASE DE DONNÉES
# ============================================
# Remplacez 'root' et 'votre_mot_de_passe' par vos infos locales
DATABASE_URL=mysql+mysqlconnector://root:votre_mot_de_passe@localhost/tontine_db

# ============================================
# CONFIGURATION JWT (AUTHENTIFICATION)
# ============================================
# Générez une nouvelle clé aléatoire pour la production
# Vous pouvez en générer une avec la commande : openssl rand -hex 32
SECRET_KEY=remplacer_par_une_chaine_aleatoire_tres_longue
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CONFIGURATION SÉCURITÉ
# ============================================
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# CONFIGURATION UTILISATEUR ADMIN PAR DÉFAUT
# ============================================
ADMIN_TELEPHONE=770000000
ADMIN_PASSWORD=changer_ce_mot_de_passe
ADMIN_EMAIL=admin@exemple.com